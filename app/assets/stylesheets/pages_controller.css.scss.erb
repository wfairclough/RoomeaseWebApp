@media all and (max-width: 1050px){
	html{
		background:none;
	}
}


@media all and (max-width: 750px){
	
#wrapper{
		width:80%;
		max-width:700px;
		margin:0 auto;
		margin-bottom:50px;
		padding-left:0px;
}

#leftContainer{
	display:none;
}
#rightContainer{
	width:90%;
	margin-top:0px;
}
}

@media all and (max-width: 460px){
	#wrapper{
		width:80%;
		margin:0 auto;
		margin-bottom:40px;
	}
	
	#rightContainer{
		width:90%;
		margin:0 0 50px 20px;
	}

	#logo img{
		width:100%;
	}
	
	.blurb {
		font-size:1em;
		text-align:left;
	}
}